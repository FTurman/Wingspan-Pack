############################# Copyright stuff
card field:
	type: text
	name: number
	script:
		position(
			of: card
			in: set
			order_by: { card.card_type + card.type + card.name }
			) + 1
		+ "/" +
		number_of_items(in: set)
	card list visible: true
	card list column: 11
	card list width: 55
	card list name: #
	editable: false
	show statistics: false
