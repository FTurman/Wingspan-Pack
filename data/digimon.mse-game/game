	show statistics: true
############################# Number
card field:
	type: text
	name: card number
	script:
		set.code
		+ "-" +
		( if pos_of_card(value)>=10 then "" else "0") +
		pos_of_card(value)
	show statistics: false
	editable: false
	card list visible: true
	card list column: 5
############################# Image
card field:
	type: image
	name: image
	show statistics: false
