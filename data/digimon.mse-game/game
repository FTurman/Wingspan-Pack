	name: digimon group
	script: digimon_filter(value)
card field:
	type: text
	name: digimon word
	editable: false
	default: "Digimon"
card field:
	type: text
	name: digimon type
	script:
		combined_editor(
			field1: card.digimon_group,
			separator1: (if card.digimon_group!="" then " " else ""),
			field2: card.digimon_word,
			hide_when_empty: true
		)
	multi line: true
	save value: false
	identifying: true
	show statistics: false
	card list column: 4
card field:
	type: text
	name: digimon battle type
	editable: false
	script: default_battle_type(value)
card field:
	type: text
	name: complex type
	script:
		combined_editor(
			field1: card.digimon_group,
			separator1: (if card.digimon_group!="" then " " else ""),
			field2: card.digimon_word,
			separator2: " • ",
			field3: card.digimon_battle_type,
			hide_when_empty: true
		)
	save value: false
	identifying: true
	show statistics: false
	card list column: 4
