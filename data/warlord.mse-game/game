############################# Name line
card field:
	type: text
	name: name
	identifying: true
	show statistics: false
	card list column: 1
	card list width: 150
	description: The name of the card
card field:
	type: text
	name: super attack
	editable: false
card field:
	type: text
	name: sub attack
	editable: false
card field:
	type: text
	name: attack
	save value: false
	script:
		# Either just superattack, or superattack - subattack
		combined_editor(
			field1: card.super_attack,
			separator: "/",
			field2: card.sub_attack,
			grey_until_needed: true,
			hide_when_both_empty: true,
			type_over1: " /",
			type_over2: "/"
		)
	card list column: 2
	card list alignment: right
	card list width: 50
	card list name: CC
	description: The attack of the character

card field:
	type: text
	name: armor class
	card list column: 2
	card list alignment: right
	card list width: 50
	card list name: CC
	description: The armor class of the character

