card field:
	type: text
	name: card number
	save value: false
	script:
		position(
			of: card
			in: set
			order_by: {
				card.name
			})
		+ "         " +
		number_of_items(in: set)
	card list column: 10
	card list width: 50
	card list name: #
	show statistics: false

